<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <!-- Judul Tugas -->
        <EditText
            android:id="@+id/editTextTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Tugas/Proyek"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            android:padding="12dp"/>

            <EditText
                android:id="@+id/editTextTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deskripsi Tugas/Proyek"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:layout_below="@id/editTextTaskTitle"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
            <Button
                android:id="@+id/btnUploadTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Tugas"
                android:textSize="18sp"
                android:layout_below="@id/btnPilihJenis"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnPilihJenis"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextTaskDescription"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:text="Pilih Jenis"/>

    </RelativeLayout>
</ScrollView>
